<KindsRoot>:
    orientation: 'vertical'

    # AREA A: THE CANVAS (Top 70%) - Nothing blocks this
    RelativeLayout:
        size_hint_y: 0.7
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "CANVAS AREA"
            color: 0.5, 0.5, 0.5, 1

    # THE WORKBENCH (Middle Strip)
    BoxLayout:
        size_hint_y: 0.1
        canvas.before:
            Color:
                rgba: 0.3, 0.3, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: "Eraser"
        Button:
            text: root.active_lead
            on_press: root.cycle_h_lead()

    # THE DRAWERS (Bottom 20%)
    BoxLayout:
        size_hint_y: 0.2
        spacing: 2
        Button:
            text: "E"
        Button:
            text: "F"
        Button:
            text: "G"
        Button:
            text: "H"
    # THE WORKBENCH (Middle Strip)
    BoxLayout:
        size_hint_y: 0.1
        canvas.before:
            Color:
                rgba: 0.3, 0.3, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: "Eraser"
        Button:
            text: root.active_lead
            on_press: root.cycle_h_lead()
        Button:
            text: root.active_soft  # This shows the 2B, 4B, 8B
            on_press: root.cycle_b_lead()
        # DRAWER F: SLIDERS & TIPS
        BoxLayout:
            size_hint_y: 1 if root.drawer_f_open else 0.001
            opacity: 1 if root.drawer_f_open else 0
            orientation: 'vertical'
            padding: 10
            
            # Tip Shape Selector
            Button:
                text: "Tip Shape: " + root.active_tip
                on_press: root.cycle_tip_shape()
                size_hint_y: 0.4

            # Size Slider
            BoxLayout:
                Label:
                    text: "Size"
                    size_hint_x: 0.3
                Slider:
                    min: 1
                    max: 100
                    value: root.tip_size
                    on_value: root.tip_size = self.value
            
            # Opacity Slider
            BoxLayout:
                Label:
                    text: "Opacity"
                    size_hint_x: 0.3
                Slider:
                    min: 0
                    max: 100
                    value: root.tip_opacity
                    on_value: root.tip_opacity = self.value

            # Gression Slider
            BoxLayout:
                Label:
                    text: "Gression"
                    size_hint_x: 0.3
                Slider:
                    min: 0
                    max: 100
                    value: root.tip_gression
                    on_value: root.tip_gression = self.value
