    # THE DRAWERS (Bottom 20%)
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 1 if (root.drawer_f_open or root.drawer_g_open) else 0.2
        
        # DRAWER F: SLIDERS & TIPS (Omitted for brevity, keep your existing F code here)

        # DRAWER G: COLOR PRECISION LAB
        BoxLayout:
            size_hint_y: 1 if root.drawer_g_open else 0.001
            opacity: 1 if root.drawer_g_open else 0
            orientation: 'horizontal'
            padding: 10
            
            # Slider 1: Lighter/Tint
            Slider:
                orientation: 'vertical'
                min: 0
                max: 100
                value: root.light_blend
                on_value: root.light_blend = self.value
            
            # Central Hue Selector (Placeholder for ColorWheel)
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: "Hue"
                Slider:
                    min: 0
                    max: 360
                    value: root.main_hue
                    on_value: root.main_hue = self.value
                # Visual Indicator of final color
                Widget:
                    canvas:
                        Color:
                            rgba: root.current_color
                        Rectangle:
                            pos: self.pos
                            size: self.size

            # Slider 2: Darker/Shade
            Slider:
                orientation: 'vertical'
                min: 0
                max: 100
                value: root.dark_blend
                on_value: root.dark_blend = self.value

        # DRAWER HANDLES
        BoxLayout:
            size_hint_y: 0.2
            spacing: 2
            Button:
                text: "E"
            Button:
                text: "F"
                on_press: root.toggle_drawer_f()
            Button:
                text: "G"
                on_press: root.toggle_drawer_g()
            Button:
                text: "H"
